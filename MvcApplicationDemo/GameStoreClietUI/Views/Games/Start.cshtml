@model IEnumerable<GameStoreClietUI.Models.GameCreateViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    @System.Web.Optimization.Styles.Render("~/Content/css")

    <title>Start</title>
</head>
<body>

    <div class="wrapper">
        @{
            Html.RenderPartial("Header");
        }

    </div>
    <div class="container">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner my-container">
                <div class="carousel-item active">
                    <img src="@Model.ToList()[0].Image" class="d-block w-100" alt="...">
                </div>
                @foreach (var item in Model)
                {
                    <div class="carousel-item ">
                        <img src="@item.Image" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block my-color">
                            <h5 class="my-margin">Price : @item.Price $</h5>
                            <p>@item.Description</p>
                        </div>
                    </div>

                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>






    @System.Web.Optimization.Scripts.Render("~/bundles/popper");

    @*<script src="~/Scripts/popper.min.js"></script>*@
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery");
    @*<script src="~/Scripts/jquery-3.0.0.min.js"></script>*@
    @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap");
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
</body>
</html>
